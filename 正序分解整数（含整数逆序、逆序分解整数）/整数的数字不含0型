//正序分解整数：输入13425 输出1 3 4 2 5
#include <stdio.h>
int main()
{
	int x;
	scanf("%d",&x);

//将整数逆序
	int t=0;		//用t表示逆序之后的数 
	int d=0;
	do{
		d=x%10;		//d为x最右边的那位数
		t=t*10+d;
		x/=10;		//x整除10，去掉x最右边的那位数 
	} while(x>0);
	printf("x=%d d=%d t=%d\n",x,d,t);	//这样只能输出末尾不为0的数字。如此时若输入x=700，输出会得到t=7，而非007（因为0*10=0） 

//逆序分解整数	
	do{
		int d=t%10;		//d为x最右边的那位数
		printf("%d ",d); 
		if(t>=10){		//循环条件为x/=10，x>0，所以最后一位数字一定小于10，不然会继续循环 
			printf(" ");	//输出时，最后一位数字后面不带空格 
		}
		t/=10;		//x整除10，去掉x最右边的那位数 
	} while(t>0);
	
	return 0;
}
